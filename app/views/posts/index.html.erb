<%= simple_form_for([current_user, @post]) do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <%= image_tag post.photo %>
    <h5><%= post.title %></h5>
    <p><%= post.content %></p>
  </div>
<% end %>
